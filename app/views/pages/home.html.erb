<div class="grid <%= @css_grid_name %>">
  <% @grid.each do |grid_row| %>
    <% grid_row.each do |square| %>
      <div class="square <%= square[:walls] %> x-<%= square[:x] %> y-<%= square[:y] %>">
        <div></div>
      </div>
    <% end %>
  <% end %>
</div>

